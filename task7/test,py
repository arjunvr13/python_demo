import re
def password_check(passkey):
    print(122)
    if len(passkey) >= 8 and  re.findall("[a-zA-Z0-9_@$]",passkey):
        print(123)
        return True
    return False

while True: 
    passkey = input("Enter the password:")
    print(passkey)
    flag_check = password_check(passkey)
    if not flag_check:
        print("invalid password")
    else:   
        print("Valid password")
    contin = input("Do you want to check another password? yes or no:")
    if contin.lower() != 'yes':
        break